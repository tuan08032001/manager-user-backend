{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "airbnb-typescript/base"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "camelcase": "off",
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "quote-props": "off",
    "import/order": "error",
    "no-case-declarations": "off",
    "@typescript-eslint/no-throw-literal": "off",
    "import/no-extraneous-dependencies": "off"
  }
}
